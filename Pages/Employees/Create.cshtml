@page
@model EmployeeSystem.Pages.Employees.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Crear</h1>
        
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Employee.Area" class="control-label"></label>
                <input asp-for="Employee.Area" class="form-control" />
                <span asp-validation-for="Employee.Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.JoinDate" class="control-label"></label>
                <input asp-for="Employee.JoinDate" class="form-control" />
                <span asp-validation-for="Employee.JoinDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Employee.IsActive" /> @Html.DisplayNameFor(model => model.Employee.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary text-end" />
            </div>
        </form>
    </div>
</div>

<hr />

<div>
    <a class="btn btn-primary" asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
